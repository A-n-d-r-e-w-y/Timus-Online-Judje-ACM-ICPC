#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int n;

int main()
{
       scanf("%d",&n);
       printf("0\n");
       printf("X\n");
       printf("*\n"); 
       printf("1\n"); 
       printf("+\n");
       for(int i=2;i<=n;i++)
       {
              printf("X\n");
              printf("*\n"); 
              printf("%d\n",i); 
              printf("+\n");
       }
	return 0;
}